  public:
    void printTriangle(int n) {
        // code here
        for(int i=1;i<=n;i++){
            for(int j=1;j<=i;j++){
                cout<<j<<" ";
            }
            for(int k=0;k<2*n-i*2;k++){
                cout<<"  ";
            }
            for(int l=i;l>0;l--){
                cout<<l<<" ";
            }
            cout<<endl;
        }
    }
};
