  public:
    void printTriangle(int n) {
        // code here
        for(int i=0;i<n;i++){
            for(int j=0;j<n-i-1;j++){
                cout<<" ";
            }
            for(int k=0;k<=i;k++){
                cout<<"*";
            }
            for(int l=0;l<=i-1;l++){
                cout<<"*";
            }
            cout<<"\n";
        }
    }
};
