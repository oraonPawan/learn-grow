  public:
    void printTriangle(int n) {
        // code here
        int a=65,b;
        for(int i=0;i<n;i++){
            for(int j=0;j<n-i-1;j++){
                cout<<" ";
            }
            a=65;
            for(int k=0;k<=i;k++){
                cout<<char(a++);
            }
            b=65+i-1;
            for(int l=0;l<i;l++){
                cout<<char(b--);
            }
            cout<<endl;
        }
    }
};
